{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Todo item",
  "type": "object",
  "id": "todo",
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 0
    },
    "text": {
      "type": "string"
    },
    "completed": {
      "type": "boolean"
    }
  },
  "required": ["id", "text", "completed"],
  "additionalProperties": false
}
